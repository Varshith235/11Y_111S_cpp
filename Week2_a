#include <iostream>
using namespace std;
float interestRate = 4.5;
namespace SavingAccount {
    float  interestRate = 6.0;  
   float calculateInterest(float amount) {
        return (amount * interestRate) / 100;
    }
}
namespace FixedDeposit {
    float interestRate = 7.5;
    float calculateInterest(float amount, int years) {
        return (amount * interestRate * years) / 100;
    }
}
int main() {
    float interestRate = 3.0;  
    cout << "--- Bank Interest Rates and Calculations ---\n";
    cout << "Local interest rate: " << interestRate << "%" << endl;
    cout << "Global interest rate: " << ::interestRate << "%" << endl;
    cout << "Saving Account interest rate: " << SavingAccount::interestRate << "%" << endl;
    cout << "Fixed Deposit interest rate: " << FixedDeposit::interestRate<<"%" << endl;
return 0;
}

