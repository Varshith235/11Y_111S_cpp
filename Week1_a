#include <iostream>
using namespace std;
int factorial(int num) {
    if (num <= 1) {
        return 1;  
    } else {
        return num * factorial(num - 1);  
    }
}

int main() {
    int number, result;
    cout << "Enter a positive integer: ";
    cin >> number;
    if (number < 0) {
        cout << "Error: Factorial is not defined for negative numbers." << endl;
    } else {
        result = factorial(number);
        cout << "Factorial of " << number << " is: " << result << endl;
    }
    return 0;
}
