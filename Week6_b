#include <iostream>
using namespace std;
class Box {
private:
    int value;
public:
    Box(int v = 0) {
        value = v;
    }
    void show() {
        cout << "Value: " << value << endl;
    }
    friend Box operator-(Box obj);
    friend Box operator+(Box obj1, Box obj2);
};
Box operator-(Box obj) {
    return Box(-obj.value);
}
Box operator+(Box obj1, Box obj2) {
    return Box(obj1.value + obj2.value);
}
int main() {
    Box b1(10), b2(20), b3;
    cout << "Original values:" << endl;
    b1.show();
    b2.show();
    b3 = b1 + b2;
    cout << "\nAfter b1 + b2:" << endl;
    b3.show();
    b3 = -b1;
    cout << "\nAfter -b1:" << endl;
    b3.show();
    return 0;
}
